<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit User</title>
    <link rel="stylesheet" href="../css/edit-user.css" />
    <link rel="stylesheet" href="../css/partials.css/tab.css" />
    <script src="../js/edit-user.js" defer></script>
  </head>

  <body>
    <!-- tabs -->
    <div class="tab">
      <button class="btn">
        <a href="/chat">Group Chat</a>
      </button>
      <button class="btn">
        <a href="/user-list">Manage Users</a>
      </button>
      <button class="btn">
        <a href="/docs-list">Manage Documents</a>
      </button>
      <form class="btn" action="/login/logout" method="get">
        <button type="submit" id="logout-btn" class="btn-a">Logout</button>
      </form>
    </div>
    <!-- tabs end -->

    <!-- edit user header -->
    <h2 class="edit-user">Edit User Information</h2>
    <form
      id="form"
      action="/edit-user/<%= user._id %>?_method=put"
      method="post"
    >
      <div class="container">
        <!-- full name-->
        <div>
          <label for="name">Full Name</label>
          <input
            name="name"
            type="text"
            id="full-name"
            value="<%= user.name %> "
          />
        </div>
        <!-- full name end -->

        <!-- email -->
        <div>
          <label for="email">Email</label>
          <input
            name="email"
            type="email"
            id="email"
            value="<%= user.email %> "
          />
        </div>
        <!-- email end -->

        <!-- save button -->
      </div>
      <div class="save-btn">
        <button id="submit-btn" type="submit">Save</button>
      </div>
    </form>
    <!-- edit user end -->
  </body>
</html>
