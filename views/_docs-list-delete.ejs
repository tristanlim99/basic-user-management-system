<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Docs List</title>
    <link rel="stylesheet" href="../css/docs-list.css" />
    <link rel="stylesheet" href="../css/partials.css/tab.css" />
    <link rel="stylesheet" href="../css/partials.css/delete-modal.css" />
    <link rel="stylesheet" href="../css/partials.css/docs-list-modal.css" />
    <script src="../js/partials/docs-list-modal.js" defer></script>
  </head>

  <body>
    <!-- tabs -->
    <div class="tab">
      <button class="btn">
        <a href="./chat">Group Chat</a>
      </button>
      <button class="btn">
        <a href="./user-list">Manage Users</a>
      </button>
      <button class="btn">
        <a href="./docs-list">Manage Documents</a>
      </button>
      <button id="logout-btn" class="btn">
        <a href="./logout.html">Logout</a>
      </button>
    </div>
    <!-- tabs end -->

    <h2>My Uploads</h2>

    <!--my uploads table  -->
    <div class="table">
      <table id="table">
        <!-- table header -->
        <tr>
          <th>Label</th>
          <th>File Name</th>
          <th>Action</th>
        </tr>
        <!-- table header end -->
        <% upload.forEach((item) => { %>
        <tr>
          <td><%= item.label %></td>
          <td><%= item.filename %></td>
          <td>
            <button class="edit" id="edit">
              <a href="/file-edit/<%= item._id %>">Edit</a>
            </button>
            |
            <button class="delete" id="del">
              <a href="#del-modal-overlay">Delete</a>
            </button>
            |
            <button class="share">
              <a href="./share/<%= item._id %> ">Share</a>
            </button>
          </td>
        </tr>
        <% }) %>
      </table>
    </div>
    <!-- my uploads table end -->

    <h2>Share Uploads</h2>

    <!-- shared uploads table  -->
    <div class="table">
      <table id="share-table">
        <!-- table header -->
        <tr>
          <th>Label</th>
          <th>File Name</th>
          <th>Shared by</th>
        </tr>
        <!-- table header -->

        <!-- row1 -->
        <tr>
          <td>
            <button id="add-upload-btn" class="add-upload">
              <a href="#modal-overlay">+ Add Upload</a>
            </button>
          </td>
          <td></td>
          <td></td>
        </tr>
        <!-- row 5 end -->
      </table>
    </div>
    <!-- shared uploads table end -->

    <!-- delete modal -->
    <form action="/docs-list-delete/<%= urlId %>?_method=delete" method="post">
      <div id="hide-div" class="hide-div">
        <div class="del-modal-overlay" id="del-modal-overlay">
          <div class="del-modal-container">
            <div class="del-modal-header">
              <p>Confirm File Deletion</p>
              <button id="x-btn" class="del-close-btn">
                <a href="/docs-list">X</a>
              </button>
            </div>
            <div class="del-modal-confirmation">
              <img
                class="del-question-mark"
                src="../img/qMark.png"
                alt="question-mark"
              />
              <p>Are you sure?</p>
            </div>
            <div class="del-modal-btns">
              <button type="submit" id="del-btn">ok</button>
              <button id="cancel-btn"><a href="/docs-list">Cancel</a></button>
            </div>
          </div>
        </div>
      </div>
    </form>
    <!-- delete modal end -->
  </body>
</html>
